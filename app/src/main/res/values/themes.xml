<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TruthSearch" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Surface and background color. -->
        <item name="colorSurface">@color/white</item> <!-- This is for light mode -->
        <item name="android:windowBackground">?attr/colorSurface</item> <!-- Adapts Day/Night -->
    </style>

    <!-- No ActionBar variant of the theme -->
    <style name="Theme.TruthSearch.NoActionBar" parent="Theme.TruthSearch">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- AppBar overlay theme -->
    <style name="Theme.TruthSearch.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />

    <!-- Popup overlay theme -->
    <style name="Theme.TruthSearch.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />
</resources>
